<div class="row">

  <div class="span3">

    <p><b>Name: </b><%= @idea.title %></p>

    <p><b>Description: </b><%= @idea.description %></p>

    <p><b>By: </b><%= @idea.user.try(:email) %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea) %> |

      <%= link_to 'Destroy', @idea, confirm: 'Are you sure?', method: :delete %> |
      
      <%= link_to 'Back', ideas_path %>
    </p>
  </div>
</div>
